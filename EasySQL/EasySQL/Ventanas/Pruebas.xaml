<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySQL.Ventanas"
        xmlns:Modelos="clr-namespace:EasySQL.Modelos" x:Class="EasySQL.Ventanas.Pruebas"
        mc:Ignorable="d"
        Title="Pruebas" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="100" Margin="105,63,0,0" VerticalAlignment="Top" Width="100">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{Binding Nombre}">
                    <GridView.ColumnHeaderContextMenu>
                        <ContextMenu/>
                    </GridView.ColumnHeaderContextMenu>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
            <ListView.DataContext>
                <Modelos:Conexion/>
            </ListView.DataContext>
        </ListView>
    </Grid>
</Window>
