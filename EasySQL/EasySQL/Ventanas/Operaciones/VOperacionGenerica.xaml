<Window x:Class="EasySQL.Ventanas.Operaciones.VOperacionGenerica"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySQL.Ventanas.Operaciones"
        mc:Ignorable="d"
        Title="OperacionGenerica" 
        Height="180" Width="400" 
        MinHeight="180" MaxHeight="250" 
        MinWidth="200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl" Grid.Row="0" VerticalAlignment="Center">Texto</Label>
        <TextBox x:Name="txtbox" Grid.Row="1" VerticalAlignment="Center" Padding="5">Texto</TextBox>
        <Button x:Name="btn" Grid.Row="2" >Enviar</Button>
    </Grid>
</Window>
